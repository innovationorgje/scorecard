@using scorecard.Models
@model StatusUpdateViewModel
@foreach(StatusUpdate update in Model.Updates)
{
    <hr />
    <input type="hidden" id="criteria-state-@update.Criteria.ID" class="criteria-state" value="@update.CssClass" />
    <p>
        @if (update.IsStateChange)
        {
            @Html.Raw(string.Format("State changed from <span>{0}</span> to <span>{1}</span>", update.StateFrom.ToString(), update.StateTo.ToString()));
        }
        else
        {
            @update.Text
        }
        <span><a href="@update.User.LinkedInProfile" target="_blank">@update.User.FullName</a>, @update.Stamp.ToString("dd/MM/yyyy HH:mm:ss")</span>
    </p>
}